{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>ClimMob | Delete treatment level</title>
{% endblock title %}


{% block bodyattributes %} style="background:#f8fafb" {% endblock bodyattributes %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 ">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Delete level</h5>
                    <div class="ibox-tools">
                        <button type="button" onclick="location.href='{{ request.route_url('useralias', technologyid=formdata.tech_id) }}';" class="btn btn-default btn-xs pull-right">Go back</button>
                    </div>
                </div>
                <div class="ibox-content">

                    {% snippet 'snippets/error.jinja2', error_summary=error_summary %}

                    <div class="middle-box text-center animated fadeInRightBig">
                        <h3 class="font-bold">Delete level</h3>
                        <div class="error-desc">
                            Do you really want to delete the level "{{ formdata.alias_name }}"?.
                            <br/><form method="post" action="{{ request.path }}">
                            <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                            <button type="submit" name="btn_delete_alias" class="btn btn-danger">Delete and go back</button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
