{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>ClimMob | Remove field agent</title>
{% endblock title %}


{% block bodyattributes %} style="background:#f8fafb" {% endblock bodyattributes %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 ">
            <div class="middle-box text-center">
                {% snippet 'snippets/error.jinja2', error_summary=error_summary %}
                <div class="error-desc">
                    <h2 style="color: red">
                    Do you really want to remove the field agent "{{ dataworking["enum_name"] }}"?
                    </h2>
                    <br/><form method="post" action="{{ request.path }}">
                    <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                    <button type="submit" class="clm-act-button">Delete</button>
                </form>
                </div>
            </div>
        </div>
    </div>
{% endblock body%}

{% if enumeratorDeleted == True %}
    {% block toastr %}
        {# Overwrite the toaster so it does not trigger the popup #}
    {% endblock toastr %}
{% endif %}

{% block script %}
    {% if enumeratorDeleted == True %}
        {# If a new project is just added then redirect the mainwindo to such project #}
        <script>
            window.top.location.href = "{{ request.route_url('enumerators') }}";
        </script>
    {% endif %}
{% endblock script %}