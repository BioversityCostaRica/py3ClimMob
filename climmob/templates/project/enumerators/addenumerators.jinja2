{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>{{ _("ClimMob | Assign field agents") }}</title>
{% endblock title %}

{% block pageheading %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ _("Assign field agents") }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ request.route_url('dashboard') }}">{{ _("Main menu") }}</a>
                </li>
                <li>
                    <a href="{{ request.route_url('prjenumerators',projectid=projectid) }}">{{ _("Assign field agents") }}</a>
                </li>
                <li class="active">
                    <strong>{{ _("New field agent") }}</strong>
                </li>
            </ol>
            <a href="https://climmob.net/blog/wiki/2019/09/30/assign-field-agents-new-field-agent/" target="_blank"><img style="width: 25px; height: 25px " src="{{ request.url_for_static('static/landing/info.png') }}" alt="info"/> </a>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
{% endblock %}

{% block pagecontent %}
    <div class="row" style="height: 100%">
        <div class="col-lg-12 " style="height: 100%">
            <div class="ibox float-e-margins" style="height: 100%; margin-bottom: 0px">
                <div class="ibox-title">
                    <h5>{{ _("Assign field agents") }}</h5>
                    <div class="ibox-tools">
                        <button type="button" onclick="location.href='{{ request.route_url('prjenumerators', projectid=projectid) }}';" class="btn btn-default btn-xs pull-right">{{ _("Go back") }}</button>
                    </div>
                </div>
                <div class="ibox-content animated fadeInRightBig" style="height: 89%">
                    {% if enumerators %}
                        <form class="form-horizontal" role="form" method="post" action="{{ request.path }}">
                            <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                            <table class="table table-striped table-bordered">
                                <tbody>
                                <tr>
                                    <th class="text-center">{{ _('Field agent') }}</th>
                                    <th class="text-center">{{ _('Select to add') }}</th>
                                </tr>

                                {% for enumerator in enumerators %}
                                    <tr>
                                        <td>
                                            {{ enumerator.enum_name }}
                                        </td>
                                        <td class="text-center">
                                            <input type="checkbox" name="add{{ enumerator.enum_id }}"/>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="text-center">
                                <button class="btn btn-primary" type="submit" name="btn_modify_group"> {{ _('Add field agents') }}</button>
                            </div>
                        </form>
                    {% else %}
                        <div style="width: 100%; text-align: center">
                            <h3><b>{{ _("No field agents found. Register your field agents first. Go to Library (left panel) > Field agents.")  }}</b></h3>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock pagecontent%}
