{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>ClimMob - Delete treatment</title>
{% endblock title %}

{% block pageheading %}

{% endblock %}

{% block bodyattributes %} style="background:#f8fafb" {% endblock bodyattributes %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 ">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Delete alias</h5>
                    <div class="ibox-tools">
                        <button type="button" onclick="location.href='{{ request.route_url('prjtechaliases', projectid=projectid, tech_id=tech_id) }}';" class="btn btn-default btn-xs pull-right">Cancel and go back</button>
                    </div>
                </div>
                <div class="ibox-content animated fadeInRightBig" >
                    <div class="middle-box text-center animated fadeInRightBig">
                        <h3 class="font-bold">Delete alias</h3>
                        <div class="error-desc">
                            Do you really want to delete alias "{{ data.alias_name }}"?.
                            <br/>
                            <form method="post" action="{{ request.path }}">
                                <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                                <button type="submit" name="btn_deleteAlias" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}